{
  "name": "flight-booking-fe",
  "version": "0.0.1",
  "engines": {
    "node": "^18",
    "npm": "^9"
  },
  "scripts": {
    "start:dev": "ng serve",
    "build": "ng build --configuration production",
    "prebuild:ci": "npm run lint && npm run test",
    "build:ci": "npm run build",
    "lint": "npm run lint:eslint && npm run lint:styles && npm run find-circular-imports",
    "lint:eslint": "NODE_ENV=production eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:styles": "stylelint --fix \"**/*.scss\"",
    "find-circular-imports": "madge --circular --extensions=ts --ts-config tsconfig.json ./**/**/*.ts",
    "test:dev": "ng test --watch",
    "test": "ng test --watch=false",
    "s3:push": "aws s3 cp --recursive ./dist s3://flight-booking-fe"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.2.0",
    "@angular/cdk": "^15.2.8",
    "@angular/common": "^15.2.0",
    "@angular/compiler": "^15.2.0",
    "@angular/core": "^15.2.0",
    "@angular/forms": "^15.2.0",
    "@angular/material": "^15.2.8",
    "@angular/platform-browser": "^15.2.0",
    "@angular/platform-browser-dynamic": "^15.2.0",
    "@angular/router": "^15.2.0",
    "@ngx-translate/core": "^14.0.0",
    "@ngx-translate/http-loader": "^7.0.0",
    "ngx-translate": "github:ngx-translate/core",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.6",
    "@angular/cli": "~15.2.6",
    "@angular/compiler-cli": "^15.2.0",
    "@hirez_io/observer-spy": "^2.2.0",
    "@types/jasmine": "~4.3.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "madge": "^6.0.0",
    "stylelint": "^15.5.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^8.0.0",
    "typescript": "~4.9.4"
  }
}
